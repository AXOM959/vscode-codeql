          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^[a-zA-Z0-9-_\\.]+$"
          }
        },
        "repositories": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^[a-zA-Z0-9-_\\.]+/[a-zA-Z0-9-_\\.]+$"
          }
        }
      },
      "required": ["repositoryList", "owners", "repositories"],
      "additionalProperties": false
    }
  },
